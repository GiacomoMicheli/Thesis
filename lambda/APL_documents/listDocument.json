{
    "type": "APL",
    "version": "1.6",
    "theme": "dark",
    "import": [
        {
            "name": "alexa-layouts",
            "version": "1.2.0"
        }
    ],
    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "items": [
            {
                "type": "AlexaTextList",
                "headerTitle": "${payload.datasets.properties.title}",
                "listItems": "${payload.datasets.properties.available_datasets}",
                "touchForward": true
            }
        ]
    }
}